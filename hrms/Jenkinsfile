pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git branch: 'main', url: 'https://github.com/sekhar334/HRMS-Frontend-main.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js and npm if not already installed
                sh 'npm install -g @angular/cli'

                // Install project dependencies
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                // Build the Angular.js project
                sh 'ng build --prod'
            }
        }

        stage('Test') {
            steps {
                // Run tests if applicable
                sh 'ng test'
            }
        }

        stage('Deploy') {
            steps {
                // Deploy the built application, you can customize this based on your deployment process
                // For example, copying the files to a server or deploying to a cloud platform
                // This is just a basic example
                sh 'cp -r dist/* /path/to/deployment/directory'
            }
        }
    }

    post {
        always {
            // Clean up after the build, if needed
        }
        success {
            // Actions to be taken when the build succeeds
        }
        failure {
            // Actions to be taken when the build fails
        }
    }
}

