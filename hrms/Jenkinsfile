pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the GitHub repository
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/sekhar334/HRMS-Frontend-main.git']]])
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Install Node.js and npm
                sh 'curl -sL https://deb.nodesource.com/setup_14.x | sudo -E bash -'
                sh 'sudo apt-get install -y nodejs'
                
                // Install Angular CLI
                sh 'sudo npm install -g @angular/cli'
                
                // Install project dependencies
                sh 'npm install'
            }
        }
        
        stage('Build') {
            steps {
                // Build Angular.js application
                sh 'ng build --prod'
            }
        }
        
        stage('Run Tests') {
            steps {
                // Run tests if available (replace this with your test command)
                sh 'ng test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Your deployment steps here (e.g., deploying to a server)
                // Replace this with your actual deployment commands
                // For example, deploying to a server using FTP or copying files to a location
                sh 'echo "hrms"'
            }
        }
    }
    
    post {
        always {
            // Cleanup steps, if needed
            deleteDir()
        }
    }
}

